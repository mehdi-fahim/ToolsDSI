{% extends 'admin/base.html.twig' %}

{% block title %}Recherche Locataire - Panel Admin{% endblock %}

{% block content %}
    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 30px; flex-wrap: wrap; gap: 15px;">
        <div>
            <h2 style="color: #2d3748; font-size: 1.8rem; margin-bottom: 5px;">üè† Recherche Locataire</h2>
            <p style="color: #718096;">Recherchez des locataires par ESI, Contrat ou Intitul√©</p>
        </div>
        <div style="display: flex; gap: 10px; flex-wrap: wrap;">
            <a href="{{ path('admin_dashboard') }}" class="btn btn-secondary">üè† Dashboard</a>
        </div>
    </div>

    {% if error is defined and error %}
        <div style="background: #fed7d7; border: 1px solid #f56565; border-radius: 8px; padding: 20px; margin-bottom: 30px;">
            <h3 style="color: #c53030; margin-bottom: 10px;">‚ö†Ô∏è Erreur</h3>
            <p style="color: #742a2a; margin: 0;">{{ error }}</p>
        </div>
    {% endif %}

    <!-- Formulaire de recherche -->
    <div style="background: white; border-radius: 12px; padding: 25px; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); margin-bottom: 30px;">
        <h3 style="color: #2d3748; margin-bottom: 20px; font-size: 1.3rem;">üîç Recherche</h3>
        
        <form method="GET" action="{{ path('admin_locataire') }}" style="display: grid; grid-template-columns: 1fr 2fr auto; gap: 15px; align-items: end;">
            <div>
                <label for="search_type" style="display: block; margin-bottom: 8px; color: #4a5568; font-weight: 500;">Type de recherche:</label>
                <select id="search_type" name="search_type" style="width: 100%; padding: 10px; border: 1px solid #e2e8f0; border-radius: 6px; background: white;">
                    <option value="">S√©lectionnez un type</option>
                    <option value="esi" {{ searchType == 'esi' ? 'selected' : '' }}>ESI</option>
                    <option value="contrat" {{ searchType == 'contrat' ? 'selected' : '' }}>Contrat</option>
                    <option value="intitule" {{ searchType == 'intitule' ? 'selected' : '' }}>Intitul√©</option>
                </select>
            </div>
            
            <div>
                <label for="search_value" style="display: block; margin-bottom: 8px; color: #4a5568; font-weight: 500;">Valeur de recherche:</label>
                <input type="text" 
                       id="search_value" 
                       name="search_value" 
                       value="{{ searchValue }}"
                       placeholder="Entrez votre recherche..."
                       style="width: 100%; padding: 10px; border: 1px solid #e2e8f0; border-radius: 6px;">
            </div>
            
            <div>
                <button type="submit" class="btn btn-primary" style="width: 100%;">
                    üîç Rechercher
                </button>
            </div>
        </form>
    </div>

    <!-- R√©sultats de recherche -->
    {% if data is defined and data|length > 0 %}
        <div style="background: white; border-radius: 12px; padding: 25px; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);">
            <h3 style="color: #2d3748; margin-bottom: 20px; font-size: 1.3rem;">
                üìã R√©sultats ({{ pagination.total }} locataire(s) trouv√©(s))
            </h3>
            
            <div class="table-container">
                <table class="admin-table">
                    <thead>
                        <tr>
                            <th>ESI</th>
                            <th>Contrat</th>
                            <th>Intitul√©</th>
                            <th>Nom</th>
                            <th>Pr√©nom</th>
                            <th>Adresse</th>
                            <th>T√©l√©phone</th>
                            <th>Email</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for locataire in data %}
                            <tr>
                                <td>{{ locataire.ESI }}</td>
                                <td>{{ locataire.CONTRAT }}</td>
                                <td>{{ locataire.INTITULE }}</td>
                                <td>{{ locataire.NOM }}</td>
                                <td>{{ locataire.PRENOM }}</td>
                                <td>{{ locataire.ADRESSE }}</td>
                                <td>{{ locataire.TELEPHONE }}</td>
                                <td>{{ locataire.EMAIL }}</td>
                                <td>
                                    <a href="{{ path('admin_locataire_detail', {esi: locataire.ESI}) }}" 
                                       class="btn btn-secondary" 
                                       style="padding: 6px 12px; font-size: 0.8rem; text-decoration: none; display: inline-flex; align-items: center; gap: 4px;">
                                        üëÅÔ∏è D√©tail
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            {% if pagination.totalPages > 1 %}
                <div class="pagination" style="margin-top: 20px; display: flex; justify-content: center; gap: 10px; flex-wrap: wrap;">
                    {% if pagination.page > 1 %}
                        <a href="?search_type={{ searchType }}&search_value={{ searchValue }}&page=1" class="btn btn-secondary">¬´ Premi√®re</a>
                        <a href="?search_type={{ searchType }}&search_value={{ searchValue }}&page={{ pagination.page - 1 }}" class="btn btn-secondary">‚Äπ Pr√©c√©dente</a>
                    {% endif %}

                    {% set start = max(1, pagination.page - 2) %}
                    {% set end = min(pagination.totalPages, pagination.page + 2) %}

                    {% for page in start..end %}
                        {% if page == pagination.page %}
                            <span class="current" style="padding: 8px 12px; background: #4299e1; color: white; border-radius: 6px;">{{ page }}</span>
                        {% else %}
                            <a href="?search_type={{ searchType }}&search_value={{ searchValue }}&page={{ page }}" 
                               style="padding: 8px 12px; background: #e2e8f0; color: #4a5568; text-decoration: none; border-radius: 6px;">{{ page }}</a>
                        {% endif %}
                    {% endfor %}

                    {% if pagination.page < pagination.totalPages %}
                        <a href="?search_type={{ searchType }}&search_value={{ searchValue }}&page={{ pagination.page + 1 }}" class="btn btn-secondary">Suivante ‚Ä∫</a>
                        <a href="?search_type={{ searchType }}&search_value={{ searchValue }}&page={{ pagination.totalPages }}" class="btn btn-secondary">Derni√®re ¬ª</a>
                    {% endif %}
                </div>
            {% endif %}

            <div style="margin-top: 20px; text-align: center; color: #718096; font-size: 0.9rem;">
                Affichage de {{ ((pagination.page - 1) * pagination.limit) + 1 }} √† {{ min(pagination.page * pagination.limit, pagination.total) }} 
                sur {{ pagination.total }} locataire(s)
            </div>
        </div>
    {% elseif searchType and searchValue %}
        <div style="background: white; border-radius: 12px; padding: 25px; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); text-align: center;">
            <p style="color: #718096; font-size: 1.1rem;">Aucun locataire trouv√© pour votre recherche.</p>
        </div>
    {% endif %}
{% endblock %}

{% block javascript %}
<script>
    // Auto-submit du formulaire quand le type de recherche change
    document.getElementById('search_type').addEventListener('change', function() {
        const searchValue = document.getElementById('search_value').value;
        if (this.value && searchValue) {
            this.form.submit();
        }
    });
</script>
{% endblock %} 