{% extends 'admin/base.html.twig' %}

{% block title %}Import Paiement CB{% endblock %}

{% block content %}
<div class="admin-container">
    <div class="admin-header" style="display:flex; justify-content: space-between; align-items: center; gap: 16px; flex-wrap: wrap;">
        <div>
            <h1>üí≥ Import Paiement CB</h1>
            <p>Consultation et mise √† jour des intitul√©s Internet pour le paiement CB</p>
        </div>
        <div style="display:flex; gap: 10px; flex-wrap: wrap;">
            <a href="{{ path('admin_dashboard') }}" class="btn btn-secondary">üè† Dashboard</a>
            <a href="{{ path('admin_import_paiement_cb_export') }}" class="btn" title="Exporter tous les intitul√©s (sans en-t√™te)">
                ‚¨áÔ∏è Exporter les intitul√©s
            </a>
        </div>
    </div>

    <div class="admin-content" style="display: flex; flex-direction: column; gap: 24px;">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div style="
                    background: {{ label == 'success' ? '#c6f6d5' : (label == 'error' ? '#fed7d7' : '#ebf8ff') }};
                    color: {{ label == 'success' ? '#22543d' : (label == 'error' ? '#742a2a' : '#2c5282') }};
                    padding: 14px 18px;
                    border-radius: 8px;
                    border-left: 4px solid {{ label == 'success' ? '#38a169' : (label == 'error' ? '#e53e3e' : '#4299e1') }};
                ">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

        {% set queryParams = app.request.query.all %}

        <div style="display:flex; gap: 12px; border-bottom: 2px solid #e2e8f0; margin-bottom: 18px;">
            {% set existingTabParams = queryParams|merge({'tab': 'existing', 'existing_page': 1}) %}
            {% set missingTabParams = queryParams|merge({'tab': 'missing', 'missing_page': 1}) %}
            <a href="{{ path('admin_import_paiement_cb', existingTabParams) }}"
               class="tab-link {{ activeTab == 'existing' ? 'active' : '' }}">
                Intitul√©s existants
            </a>
            <a href="{{ path('admin_import_paiement_cb', missingTabParams) }}"
               class="tab-link {{ activeTab == 'missing' ? 'active' : '' }}">
                Intitul√©s manquants
            </a>
        </div>

        <div class="tab-panel {{ activeTab == 'existing' ? 'active' : '' }}" data-tab="existing">
            <div style="display:flex; justify-content: space-between; align-items: center; gap: 16px; flex-wrap: wrap; margin-bottom: 18px;">
                <h2 style="color: #2d3748; font-size: 1.4rem; margin: 0;">üìÑ Intitul√©s existants (ETUDES.INTERNET_INTITULES)</h2>
                <form method="GET" action="{{ path('admin_import_paiement_cb') }}" style="display:flex; gap: 12px; align-items: center; flex-wrap: wrap;">
                    <input type="hidden" name="missing_search" value="{{ missingSearch }}">
                    <input type="hidden" name="missing_page" value="{{ missingPagination.page }}">
                    <input type="hidden" name="tab" value="existing">
                    <input type="hidden" name="existing_page" value="1">
                    <input type="text"
                           name="existing_search"
                           value="{{ existingSearch }}"
                           placeholder="Recherche sur le n¬∞ d'intitul√© ou le nom"
                           style="padding: 10px 14px; border: 2px solid #e2e8f0; border-radius: 8px; min-width: 240px;">
                    <button type="submit" class="btn">üîç Rechercher</button>
                    {% if existingSearch %}
                        <a href="{{ path('admin_import_paiement_cb', { missing_search: missingSearch }) }}" class="btn btn-secondary">‚ùå Effacer</a>
                    {% endif %}
                </form>
            </div>

            <div class="table-container" style="overflow-x: auto;">
                <table class="admin-table">
                    <thead>
                        <tr>
                            <th style="min-width: 120px;">N¬∞ Intitul√©</th>
                            <th style="min-width: 220px;">Nom</th>
                            <th style="min-width: 120px;">Mot de passe</th>
                            <th style="min-width: 160px;">Date cr√©ation</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% if existing is empty %}
                            <tr>
                                <td colspan="4" style="text-align:center; color:#718096; padding: 24px;">
                                    Aucun intitul√© trouv√©.
                                </td>
                            </tr>
                        {% else %}
                            {% for row in existing %}
                                <tr>
                                    <td>{{ row.CAINT_NUM }}</td>
                                    <td>{{ row.NOM }}</td>
                                    <td>{{ row.MDP }}</td>
                                    <td>
                                        {% if row.DATECRE is defined and row.DATECRE %}
                                            {{ row.DATECRE }}
                                        {% else %}
                                            <span style="color:#a0aec0;">-</span>
                                        {% endif %}
                                    </td>
                                </tr>
                            {% endfor %}
                        {% endif %}
                    </tbody>
                </table>
            </div>

            {% set ep = existingPagination %}
            {% if ep.total > ep.limit %}
                <div class="pagination" style="margin-top: 18px;">
                    {% set firstParams = queryParams|merge({'existing_page': 1, 'tab': 'existing'}) %}
                    {% set prevParams = queryParams|merge({'existing_page': ep.page - 1, 'tab': 'existing'}) %}
                    {% set nextParams = queryParams|merge({'existing_page': ep.page + 1, 'tab': 'existing'}) %}
                    {% set lastParams = queryParams|merge({'existing_page': ep.totalPages, 'tab': 'existing'}) %}

                    <a class="btn btn-secondary {{ ep.page == 1 ? 'disabled' : '' }}"
                       href="{{ ep.page == 1 ? '#' : path('admin_import_paiement_cb', firstParams) }}">‚èÆÔ∏è Premi√®re</a>
                    <a class="btn btn-secondary {{ ep.page == 1 ? 'disabled' : '' }}"
                       href="{{ ep.page == 1 ? '#' : path('admin_import_paiement_cb', prevParams) }}">¬´ Pr√©c√©dent</a>
                    <span class="pagination-info">Page {{ ep.page }} sur {{ ep.totalPages }} ‚Ä¢ {{ ep.total }} r√©sultat(s)</span>
                    <a class="btn btn-secondary {{ ep.page == ep.totalPages ? 'disabled' : '' }}"
                       href="{{ ep.page == ep.totalPages ? '#' : path('admin_import_paiement_cb', nextParams) }}">Suivant ¬ª</a>
                    <a class="btn btn-secondary {{ ep.page == ep.totalPages ? 'disabled' : '' }}"
                       href="{{ ep.page == ep.totalPages ? '#' : path('admin_import_paiement_cb', lastParams) }}">Derni√®re ‚è≠Ô∏è</a>
                </div>
            {% else %}
                <div style="margin-top: 12px; color: #718096; font-size: 0.95rem;">
                    {{ ep.total }} r√©sultat(s) affich√©(s).
                </div>
            {% endif %}
        </div>

        <div class="tab-panel {{ activeTab == 'missing' ? 'active' : '' }}" data-tab="missing">
            <div style="display:flex; justify-content: space-between; align-items: center; gap: 16px; flex-wrap: wrap; margin-bottom: 18px;">
                <h2 style="color: #2d3748; font-size: 1.4rem; margin: 0;">üß© Intitul√©s manquants</h2>
                <form method="GET" action="{{ path('admin_import_paiement_cb') }}" style="display:flex; gap: 12px; align-items: center; flex-wrap: wrap;">
                    <input type="hidden" name="existing_search" value="{{ existingSearch }}">
                    <input type="hidden" name="existing_page" value="{{ existingPagination.page }}">
                    <input type="hidden" name="tab" value="missing">
                    <input type="hidden" name="missing_page" value="1">
                    <input type="text"
                           name="missing_search"
                           value="{{ missingSearch }}"
                           placeholder="Recherche sur le n¬∞ d'intitul√© ou le nom"
                           style="padding: 10px 14px; border: 2px solid #e2e8f0; border-radius: 8px; min-width: 240px;">
                    <button type="submit" class="btn btn-secondary">üîç Rechercher</button>
                    {% if missingSearch %}
                        <a href="{{ path('admin_import_paiement_cb', { existing_search: existingSearch }) }}" class="btn btn-secondary">‚ùå Effacer</a>
                    {% endif %}
                </form>
            </div>

            <form method="POST" action="{{ path('admin_import_paiement_cb') }}" id="importSelectedForm">
                <input type="hidden" name="action" value="import_selected">
                <input type="hidden" name="existing_search" value="{{ existingSearch }}">
                <input type="hidden" name="missing_search" value="{{ missingSearch }}">
                <input type="hidden" name="existing_page" value="{{ existingPagination.page }}">
                <input type="hidden" name="missing_page" value="{{ missingPagination.page }}">
                <input type="hidden" name="tab" value="missing">

                <div class="table-container" style="overflow-x: auto;">
                    <table class="admin-table">
                        <thead>
                            <tr>
                                <th style="width: 40px;">
                                    <input type="checkbox" id="selectAllMissing" title="Tout s√©lectionner">
                                </th>
                                <th style="min-width: 120px;">N¬∞ Intitul√©</th>
                                <th style="min-width: 220px;">Nom</th>
                                <th style="min-width: 120px;">Mot de passe</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% if missing is empty %}
                                <tr>
                                    <td colspan="4" style="text-align:center; color:#718096; padding: 24px;">
                                        Aucun intitul√© manquant d√©tect√©.
                                    </td>
                                </tr>
                            {% else %}
                                {% for row in missing %}
                                    <tr>
                                        <td>
                                            <input type="checkbox"
                                                   name="selected[]"
                                                   value="{{ row.CAINT_NUM }}|{{ row.NOM|e('html_attr') }}|{{ row.MDP|e('html_attr') }}">
                                        </td>
                                        <td>{{ row.CAINT_NUM }}</td>
                                        <td>{{ row.NOM }}</td>
                                        <td>{{ row.MDP }}</td>
                                    </tr>
                                {% endfor %}
                            {% endif %}
                        </tbody>
                    </table>
                </div>

                <div style="display:flex; gap: 12px; margin-top: 18px; flex-wrap: wrap;">
                    <button type="submit" class="btn btn-success">
                        ‚úÖ Importer la s√©lection
                    </button>
                </div>
            </form>

            <form method="POST" action="{{ path('admin_import_paiement_cb') }}" style="margin-top: 12px;">
                <input type="hidden" name="action" value="import_all">
                <input type="hidden" name="existing_search" value="{{ existingSearch }}">
                <input type="hidden" name="missing_search" value="{{ missingSearch }}">
                <input type="hidden" name="existing_page" value="{{ existingPagination.page }}">
                <input type="hidden" name="missing_page" value="{{ missingPagination.page }}">
                <input type="hidden" name="tab" value="missing">
                <button type="submit" class="btn btn-secondary" onclick="return confirm('Confirmer l\'import de tous les intitul√©s manquants ?');">
                    üì• Importer tout le r√©sultat
                </button>
            </form>

            {% set mp = missingPagination %}
            {% if mp.total > mp.limit %}
                <div class="pagination" style="margin-top: 18px;">
                    {% set firstParamsM = queryParams|merge({'missing_page': 1, 'tab': 'missing'}) %}
                    {% set prevParamsM = queryParams|merge({'missing_page': mp.page - 1, 'tab': 'missing'}) %}
                    {% set nextParamsM = queryParams|merge({'missing_page': mp.page + 1, 'tab': 'missing'}) %}
                    {% set lastParamsM = queryParams|merge({'missing_page': mp.totalPages, 'tab': 'missing'}) %}

                    <a class="btn btn-secondary {{ mp.page == 1 ? 'disabled' : '' }}"
                       href="{{ mp.page == 1 ? '#' : path('admin_import_paiement_cb', firstParamsM) }}">‚èÆÔ∏è Premi√®re</a>
                    <a class="btn btn-secondary {{ mp.page == 1 ? 'disabled' : '' }}"
                       href="{{ mp.page == 1 ? '#' : path('admin_import_paiement_cb', prevParamsM) }}">¬´ Pr√©c√©dent</a>
                    <span class="pagination-info">Page {{ mp.page }} sur {{ mp.totalPages }} ‚Ä¢ {{ mp.total }} r√©sultat(s)</span>
                    <a class="btn btn-secondary {{ mp.page == mp.totalPages ? 'disabled' : '' }}"
                       href="{{ mp.page == mp.totalPages ? '#' : path('admin_import_paiement_cb', nextParamsM) }}">Suivant ¬ª</a>
                    <a class="btn btn-secondary {{ mp.page == mp.totalPages ? 'disabled' : '' }}"
                       href="{{ mp.page == mp.totalPages ? '#' : path('admin_import_paiement_cb', lastParamsM) }}">Derni√®re ‚è≠Ô∏è</a>
                </div>
            {% else %}
                <div style="margin-top: 12px; color: #718096; font-size: 0.95rem;">
                    {{ mp.total }} r√©sultat(s) affich√©(s).
                </div>
            {% endif %}
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function () {
    const selectAll = document.getElementById('selectAllMissing');
    if (!selectAll) {
        return;
    }

    const checkboxes = document.querySelectorAll('input[name="selected[]"]');
    selectAll.addEventListener('change', function () {
        checkboxes.forEach(cb => {
            cb.checked = selectAll.checked;
        });
    });
});
</script>

<style>
    .tab-link {
        padding: 10px 16px;
        border-bottom: 3px solid transparent;
        text-decoration: none;
        color: #4a5568;
        font-weight: 600;
        transition: all 0.2s ease;
    }

    .tab-link:hover {
        color: #2b6cb0;
    }

    .tab-link.active {
        color: #2b6cb0;
        border-color: #4299e1;
    }

    .tab-panel {
        display: none;
        background: #ffffff;
        border-radius: 14px;
        box-shadow: 0 4px 12px rgba(35,41,70,0.08);
        padding: 24px;
    }

    .tab-panel.active {
        display: block;
    }

    .pagination {
        display: flex;
        align-items: center;
        gap: 10px;
        flex-wrap: wrap;
    }

    .pagination .btn.disabled {
        pointer-events: none;
        opacity: 0.6;
    }

    .pagination-info {
        color: #4a5568;
        font-weight: 600;
    }
</style>
{% endblock %}

