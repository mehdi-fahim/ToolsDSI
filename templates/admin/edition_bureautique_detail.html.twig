    </div>
{% endblock %}

{% block javascript %}
<script>
    function exportSingleRecord(format) {
        const url = window.location.origin + '/admin/entity/EditionBureautique/export/' + format + '?id={{ entity.NOM_BI }}';
        window.location.href = url;
    }
</script>
{% endblock %} 